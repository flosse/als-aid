.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-cube
        | AlsAID
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if user
          li(class=(title == 'Feedback') ? 'active' : undefined)
            a(href='/feedback') Feedback
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Sign in') ? 'active' : undefined)
            a(href='/auth/signin') Sign in
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/auth/signup') Create Account
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              img(src='#{user.getAvatar()}')
              i.caret
            ul.dropdown-menu
              li.dropdown-header User
              li
                a(href='/account') My Account
              li.divider
              if user.isAdmin() === true
                li.dropdown-header Administrator
                li
                  a(href='/admin') Dashboard
                li
                  a(href='/admin/users') Users
                li
                  a(href='/admin/sessions') Sessions
                li
                  a(href='/admin/logs') Logs
                li.divider
              li
                a(href='/auth/signout') Sign out
